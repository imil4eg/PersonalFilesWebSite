@model EditUserViewModel

@{
    ViewData["Title"] = "EditUser";
}

@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="container">
        <h2>@Model.UserName</h2>
        <div class="row">
            <div class="col-md-6">
                Роль
            </div>
            <div class="col-md-6">
                @Html.DropDownListFor(m => m.SelectRole.SelectedRoleId, new SelectList(Model.SelectRole.Roles, "Id", "Name", Model.SelectRole.SelectedRoleId), new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Сохранить" class="btn btn-success"/>
        </div>
    </div>
}

