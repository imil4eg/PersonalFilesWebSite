@model IList<PersonViewModel>

@{
    ViewData["Title"] = "Persons";
}

<h2>Persons</h2>

<div>
    <table class="table">
        @foreach(var person in Model)
        {
            <tr>
                <td>
                    <img class="img-circle" src="~/images/avatar.png" width="100" height="75" />
                </td>
                <td>@Html.ActionLink(string.Format($"{person.FirstName} {person.LastName}"), "PersonProfile", "Person", new { @personId = person.Id })</td>
                <td>@Html.ActionLink("Изменить", "EditPerson", "Person", new { @personId = person.Id }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Удалить", "DeletePerson", "Person", new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
</div>

